<div id="portal-toolbar-wrapper"
     i18n:domain="plone">

<h5 class="hiddenStructure" i18n:translate="">Toolbar</h5>

<tal:loggedin condition="not: view/anonymous">
<dl id="portal-toolbar"
    class="actionMenu"
    tal:condition="python:view.available">
    <dt>
      <a id="user-name"
         class="visualCaseSensitive"
         tal:attributes="href view/homelink_url"
         tal:content="view/user_name">
        John
      </a>
    </dt>

    <dd tal:repeat="action view/user_actions">
      <a href=""
         tal:attributes="href action/url;"
         tal:content="action/title"
         i18n:translate="">
         action title
      </a>
    </dd>
</dl>
</tal:loggedin>

<tal:anon condition="view/anonymous">
      <a href=""
         tal:attributes="href string:${view/site_url}/login"
         id="portal-toolbar"
         i18n:translate="">
         Log in
      </a>
</tal:anon>


</div>
