<div i18n:domain="plone"
     id="tag"
     class="documentByLine"
     tal:define="tags context/Subject|nothing;
                 url_quote  nocall:modules/Products.PythonScripts.standard/url_quote;"
     tal:condition="tags">
  &mdash;
  <tal:filedunder i18n:translate="label_filed_under">filed under:</tal:filedunder>
  <span tal:repeat="tag tags">
    <a href=""
       class="link-tag"
       rel="tag"
       tal:content="tag"
       tal:define="quotedCat python:url_quote(tag)"
       tal:attributes="href string:${context/portal_url}/search?Subject%3Alist=${quotedCat}">
      Tag
      </a><tal:separator condition="not: repeat/tag/end">,</tal:separator>
  </span>
</div>
